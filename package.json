{
  "name": "kaznu-lighthouse",
  "version": "2.0.0",
  "description": "Multi-user Telegram bot for schedule notifications",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "tsc && node dist/bot.js",
    "redis": "./scripts/start-redis.sh",
    "start:full": "./scripts/start-redis.sh && pnpm start",
    "redis:local": "./scripts/start-redis.sh",
    "check:users": "node dist/scripts/check-users.js",
    "manage:users": "node dist/scripts/manage-users.js",
    "clear:redis": "pnpm tsx scripts/clear-redis.ts",
    "redis:cli": "redis-cli",
    "test:scrapper": "pnpm tsx src/services/scheduleScrapper.ts"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bull": "^4.12.2",
    "dotenv": "^17.2.2",
    "grammy": "^1.38.2",
    "ioredis": "^5.7.0",
    "node-cron": "^4.2.1",
    "playwright": "^1.56.1"
  }
}
